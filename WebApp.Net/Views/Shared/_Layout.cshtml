@model MainViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WebApp.Net</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/WebApp.Net.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebApp.Net</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item ml-auto" style="margin-right: 5px;">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="nav-link text-dark">@User.Identity.Name</a>
                        }
                        else
                        {
                            <a class="nav-link text-dark" asp-area="" asp-action="" asp-controller="Auth" type="button"
                               data-bs-toggle="modal" data-bs-target="#exampleModal">Регистрация</a>
                        }
                    </li>
                </ul>
            </div>
            <style>
                .navbar-collapse {
                    display: flex;
                    justify-content: space-between;
                }
                .ml-auto {
                    margin-left: auto;
                }
            </style>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @* <!-- Button trigger modal --> *@
        @* <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"> *@
        @*     Launch demo modal *@
        @* </button> *@

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <form method="post" asp-action="Register" asp-controller="Auth">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Регистрация</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                        
                            <div style="margin-top: 10px;">
                                <input class="form-control" placeholder="Почта" autocomplete="Email" asp-for="Login.Email" type="email">
                            </div>
                            <div style="margin-top: 10px;">
                                <input class="form-control" placeholder="Пароль" autocomplete="Password" asp-for="Login.Password" type="password"/>
                            </div>
                        
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                            <button type="submit" class="btn btn-primary" name="type" value="reg">Регистрация</button>
                            <button type="submit" class="btn btn-primary" name="type" value="login">Войти</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - WebApp.Net - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>